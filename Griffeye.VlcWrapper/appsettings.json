{
  "Serilog": {
    "Enrich": [ "WithProcessId", "WithThreadId" ],
    "MinimumLevel": "Information",
    "WriteTo": [ {
      "Name": "Async",
      "Args": {
        "configure": [{
          "Name": "File",
          "Args": { 
            "path": "%TEMP%\\Logs\\videoplayer.txt", 
            "rollingInterval": "Day",
            "shared":  true,
            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u4} [{ProcessId}:{ThreadId}] {Message:lj}{NewLine}{Exception}"
          }
        }]
      }
    }]
  }
}